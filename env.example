# ---------------- API Keys ----------------
# Your API key for the Motion app. This is required for task syncing.
MOTION_API_KEY="your_motion_api_key_here"

# ---------------- Feature Flags ----------------
# Set to 1 to enable creating Motion tasks from OCR, 0 to disable.
MOTION_ENABLE_OCR=1

# ---------------- Timers and Intervals (in seconds) ----------------
# How often to sync tasks with the Motion API.
MOTION_SYNC_INTERVAL=900

# How often to run the automatic posture check.
POSTURE_INTERVAL=300

# How often to run the automatic OCR capture.
OCR_INTERVAL=600

# ---------------- OCR Settings ----------------
# Default number of days to set a task's due date if not specified in the text.
OCR_DEFAULT_DUE_DAYS=2
