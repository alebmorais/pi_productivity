# --------- Motion API ----------
MOTION_API_KEY=coloque_sua_chave_aqui
MOTION_ENABLE_OCR=1
OCR_DEFAULT_DUE_DAYS=2

# --------- Loops automáticos ----------
AUTO_POSTURE=1
POSTURE_INTERVAL_SEC=120

AUTO_OCR=1
OCR_INTERVAL_SEC=30

# --------- Hidratação ----------
HYDRATE_ENABLE=1
HYDRATE_INTERVAL_MIN=40
HYDRATE_FLASHES=6
HYDRATE_ON_SEC=0.25
HYDRATE_OFF_SEC=0.15

# --------- E-paper / tarefas ----------
EPAPER_ENABLE=1
EPAPER_ROTATE_180=0
MOTION_SYNC_INTERVAL_SEC=300
# opcional: caminho para o banco SQLite com tarefas (default: ~/pi_productivity/data/tasks.db)
# PI_PRODUCTIVITY_DB=/home/pi/pi_productivity/data/tasks.db
# opcional: sobrescreve o arquivo PNG salvo
# EPAPER_OUTPUT_PATH=/mnt/data/pi_productivity/last_epaper.png
